import java.util.Scanner;

public class positivonegativo { public static void main(String[] args) { Scanner scanner = new Scanner(System.in);

 //Inserir o primeiro numero:  
   System.out.print("Qual o numero de maças compradas ? ");
   double maca = scanner.nextDouble();
   
 //Comparação dos valores recebidos:
  if (maca >= 13) {
      double meia = maça * 1.30;
            System.out.println("Valor total sera: ", meia);
        } else {
            double duzia = maca * 1.00;
            System.out.println("Valor total sera: ", duzia);
        }
        scanner.close();
    }
}

